{
  "name": "n8n-isolated",
  "description": "n8n MCP server with network isolation (for remote n8n)",
  "command": "docker",
  "args": [
    "run",
    "--rm",
    "-i",
    "-e", "N8N_BASE_URL",
    "-e", "N8N_API_KEY",
    "-e", "MCP_SERVER_NAME=n8n-mcp-server",
    "-e", "LOG_LEVEL=info",
    "-e", "DEBUG=false",
    "eekfonky/n8n-mcp-server:latest"
  ],
  "env": {
    "N8N_BASE_URL": "https://your-n8n-instance.com",
    "N8N_API_KEY": "your-api-key-here"
  },
  "transport": "stdio"
}